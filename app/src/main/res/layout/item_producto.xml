<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/text_producto_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_producto_precio"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/text_producto_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btn_eliminar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/btn_eliminar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Eliminar"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/text_producto_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/text_producto_nombre"
        app:layout_constraintTop_toBottomOf="@id/text_producto_nombre"
        app:layout_constraintEnd_toEndOf="@id/text_producto_nombre"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
