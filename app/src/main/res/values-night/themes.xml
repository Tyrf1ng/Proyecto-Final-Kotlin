<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicación - Modo Oscuro -->
    <style name="Theme.Shoptimize" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Estado de barra de estado y navegación -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/black</item>
        
        <!-- Estilos de texto por defecto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        
        <!-- Material Components -->
        <item name="textInputStyle">@style/Widget.Shoptimize.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Shoptimize.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.Shoptimize.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/Widget.Shoptimize.CardView</item>
        
        <!-- Ripple -->
        <item name="colorControlHighlight">@color/ripple_dark</item>
    </style>
</resources>