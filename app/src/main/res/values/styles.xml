<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ======================== -->
    <!-- ESTILOS DE TEXTO -->
    <!-- ======================== -->
    
    <!-- Headlines - Títulos principales más grandes y visibles -->
    <style name="TextAppearance.Shoptimize.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.Shoptimize.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Shoptimize.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Subtítulos -->
    <style name="TextAppearance.Shoptimize.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Shoptimize.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Body Text - Más grande para mejor legibilidad -->
    <style name="TextAppearance.Shoptimize.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TextAppearance.Shoptimize.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!-- Captions - Más visible que antes -->
    <style name="TextAppearance.Shoptimize.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Texto de precio - Más prominente -->
    <style name="TextAppearance.Shoptimize.Price" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/success</item>
    </style>

    <!-- Texto de precio grande para destacados -->
    <style name="TextAppearance.Shoptimize.Price.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- ======================== -->
    <!-- COMPONENTES MATERIAL -->
    <!-- ======================== -->
    
    <!-- TextInputLayout - Diseño moderno y visible -->
    <style name="Widget.Shoptimize.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextAppearance">@style/TextAppearance.Shoptimize.Body2</item>
    </style>

    <style name="Widget.Shoptimize.TextInputLayout.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- EditText dentro de TextInputLayout -->
    <style name="Widget.Shoptimize.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Buttons - Más grandes y visibles -->
    <style name="Widget.Shoptimize.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.Shoptimize.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.Shoptimize.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- FloatingActionButton -->
    <style name="Widget.Shoptimize.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- CardView -->
    <style name="Widget.Shoptimize.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.Shoptimize.CardView.Elevated" parent="Widget.Shoptimize.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- ======================== -->
    <!-- ESTILOS ESPECÍFICOS -->
    <!-- ======================== -->
    
    <!-- Item de lista -->
    <style name="Widget.Shoptimize.ItemCard" parent="Widget.Shoptimize.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <!-- Imagen de avatar circular -->
    <style name="Widget.Shoptimize.Avatar" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Shoptimize.Circle</item>
    </style>

    <!-- ======================== -->
    <!-- SHAPE APPEARANCES -->
    <!-- ======================== -->
    
    <style name="ShapeAppearance.Shoptimize.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Shoptimize.MediumComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Shoptimize.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ======================== -->
    <!-- DIVISORES -->
    <!-- ======================== -->
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
