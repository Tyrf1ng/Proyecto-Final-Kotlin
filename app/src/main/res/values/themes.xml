<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicación - Modo Claro -->
    <style name="Theme.Shoptimize" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Estado de barra de estado y navegación -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Estilos de texto por defecto -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        
        <!-- Material Components -->
        <item name="textInputStyle">@style/Widget.Shoptimize.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Shoptimize.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.Shoptimize.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/Widget.Shoptimize.CardView</item>
        
        <!-- Ripple -->
        <item name="colorControlHighlight">@color/ripple_light</item>
    </style>

    <style name="Theme.Shoptimize.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shoptimize.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Shoptimize.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>